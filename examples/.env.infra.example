# Global Infrastructure Environment Variables
# Copy this file to .env at the root of the project and populate the variables.

# Core Network / Subnet definitions
INFRA_SUBNET="172.19.0.0/16"
INFRA_GATEWAY="172.19.0.1"

# Base Domain
DEFAULT_URL="local.dev"

# Storage Mount Paths
DEFAULT_DATA_DIR="/mnt/wsl/data"
DEFAULT_OBSERVABILITY_DIR="/mnt/wsl/data/observability"
DEFAULT_DOCKER_PROJECT_PATH="./"

# HTTP/HTTPS Ports for Traefik
HTTP_PORT=80
HTTP_HOST_PORT=80
HTTPS_PORT=443
HTTPS_HOST_PORT=443

# Traefik Dashboard
TRAEFIK_DASHBOARD_PORT=8080
TRAEFIK_DASHBOARD_HOST_PORT=8080
TRAEFIK_METRICS_PORT=8082
TRAEFIK_METRICS_HOST_PORT=8082

# MinIO
MINIO_APP_USERNAME="loki"
# Note: Root user/password are loaded via /secrets/minio_root_*.txt

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USERNAME="admin"
GRAFANA_ADMIN_PASSWORD="super-local-password!"

# OAuth2 Proxy / Keycloak
OAUTH2_PROXY_CLIENT_ID="grafana-client"
OAUTH2_PROXY_CLIENT_SECRET="your-client-secret-here"
KEYCLOAK_REALM="hy-home.realm"

# Alloy / OpenTelemetry
ALLOY_PORT=12345
ALLOY_OTLP_GRPC_PORT=4317
ALLOY_OTLP_GRPC_HOST_PORT=4317
ALLOY_OTLP_HTTP_PORT=4318
ALLOY_OTLP_HTTP_HOST_PORT=4318

# Alertmanager Slack Integration
SLACK_WEBHOOK_URL=""
SMTP_USERNAME=""
SMTP_PASSWORD=""

# PostgreSQL Patroni Cluster
POSTGRES_PORT=5432
PATRONI_RESTAPI_PORT=8008
ETCD_CLIENT_PORT=2379
ETCD_PEER_PORT=2380

POSTGRES_WRITE_PORT=5000
POSTGRES_WRITE_HOST_PORT=5000
POSTGRES_READ_PORT=5001
POSTGRES_READ_HOST_PORT=5001
HAPROXY_METRICS_PORT=8404
HAPROXY_METRICS_HOST_PORT=8404

POSTGRES_ROUTER_HOSTNAME="pg-router"
POSTGRES_USER="postgres"
POSTGRES_DB="postgres"

# Pushgateway
PUSHGATEWAY_PORT=9091
